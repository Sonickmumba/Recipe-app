<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <% if user_signed_in? %>
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand">Logged as : <%= current_user.name %></a>
        <div class="d-flex">
          <%= link_to "Foods", foods_path, class: " nav-link active" %>
          <%= link_to "Recipe List", recipes_path, class:" nav-link" %>
          <%= link_to "Public Recipe List", public_recipes_path, class: "nav-link" %>
          <%= link_to "Edit User", edit_user_registration_path, class: "btn btn-outline-success" %>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-success" %>
        </div>
      </div>
    </nav>
    <% else %>
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand">My Recipe</a>
        <form class="d-flex">
          <%= link_to "Log In", new_user_session_path, class: "btn btn-outline-success" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-success" %>
        </form>
      </div>
    </nav>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
