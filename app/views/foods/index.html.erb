<div class="food-wrapper">
  <div class="add-button-wrapper">
    <%= link_to "Add food", new_food_path, class: "food-remove-btn"%>
  </div>

  <table class="table table-striped my-5 container foodTable">
    <thead>
      <tr> 
        <th scope="col">Food</th>
        <th scope="col">Measurement Unit</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <%if current_user == food.user%>
          <tr>
            <td><%= food.name%></td>
            <td><%= food.measurement_unit%></td>
            <td>$<%= food.price%></td>
            <td><%= button_to 'DELETE', food_path(id: food.id), method: :delete, class: "deleteFood" %></td>  
          </tr>
        <% end %>
      <%end%>
    </tbody>
  </table>
</div>