<h1>Editing recipe food</h1>

 <%= form_with  model: @recipe, url: { action: "update" }, local: true  do |form|%>

   <div class="form-box">
      <%= form.label :food_id, class:"label" %><br>
      <%= form.select :food_id, current_user.foods.collect {|food| [food.name, food.id]},{ include_blank: false} , class:"field" %><br>
    </div>
  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>