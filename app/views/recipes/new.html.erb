<div class="wrapper-container">
  <h2>Add new recipe</h2>
  <%= form_with model: @recipe, url: recipes_path, method: :post do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :preparation_time %><br />
      <%= f.text_field :preparation_time, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :cooking_time %><br />
      <%= f.text_field :cooking_time, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :public %><br />
      <%= f.check_box :public, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="actions">
      <%= f.submit "Adding recipe", class: "btn-recipe" %>
    </div>
  <% end %>
</div>